<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@color/colorAccent</item>

        <item name="android:windowSharedElementsUseOverlay">false</item>
    </style>

    <style name="ArticleListTheme" parent="AppTheme.NoActionBar" />

    <style name="ArticleDetailTheme" parent="AppTheme.NoActionBar">
        <item name="android:windowTranslucentStatus">true</item>
    </style>

    <!-- Text -->
    <style name="AppTheme.Text" parent="TextAppearance.AppCompat">
        <item name="android:letterSpacing">0.02</item>
    </style>

    <!--Card-->
    <style name="AppTheme.Text.Card" />
    <style name="AppTheme.Text.Card.Title">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:lineSpacingMultiplier">1.1</item>
        <item name="android:textColor">@drawable/selector_card_title_color</item>
    </style>

    <style name="AppTheme.Text.Card.Date">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:textColor">@color/article_card_date</item>
    </style>

    <style name="AppTheme.Text.Card.Text">
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textColor">@drawable/selector_card_text_color</item>
    </style>

    <!--Detail-->
    <style name="AppTheme.Text.Detail" />
    <style name="AppTheme.Text.Detail.Title">
        <item name="android:textSize">24sp</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textColor">@drawable/selector_card_title_color</item>
    </style>

    <style name="AppTheme.Text.Detail.Date">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingMultiplier">1.3</item>
        <item name="android:textColor">@color/article_card_date</item>
    </style>

    <style name="AppTheme.Text.Detail.Text">
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:lineSpacingMultiplier">1.2</item>
        <item name="android:textColor">@drawable/selector_card_text_color</item>
    </style>
</resources>
