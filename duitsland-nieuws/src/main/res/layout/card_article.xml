<?xml version="1.0" encoding="utf-8"?>
<io.supersimple.duitslandnieuws.presentation.article.adapter.ArticleItemLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:background="@drawable/selector_card_article_background"
    android:elevation="2dp"
    android:orientation="vertical"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_article_image"
            android:layout_width="100dp"
            android:layout_height="70dp"
            android:layout_marginRight="12dp"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/tv_article_title"
            style="@style/AppTheme.Text.Card.Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_article_pub_date"
        style="@style/AppTheme.Text.Card.Date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"/>

    <TextView
        android:id="@+id/tv_article_excerpt"
        style="@style/AppTheme.Text.Card.Text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</io.supersimple.duitslandnieuws.presentation.article.adapter.ArticleItemLayout>